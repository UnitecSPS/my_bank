= render "submenu"

.center_content
  #right_wrap
    #right_content
      %h2 Clientes

      - if flash[:notice].present?
        .notice= flash[:notice]

      - if @clients.any?
        %table{id:"rounded-corner",border: "1"}
          %thead
            %tr
              %th Identidad
              %th Nombre
              %th Cantidad de Cuentas
          %tbody
            = render @clients
      - else
        %em No Hay ningun cliente agredo
  .sidebar{id: "sidebar"}
    %h2 Administracion de usuarios
    .sidebar_section_text Listado de clientes para que puedas agregar nuevos u editar existentes.

  .clear



