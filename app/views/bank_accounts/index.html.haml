= render "submenu"

.center_content
  #right_wrap
    #right_content
      %h2 Cuentas Bancarias

      - if flash[:notice].present?
        .notice= flash[:notice]

      - if @bank_accounts.any?
        = render partial: "shared/filter_form", locals: {form_path: bank_accounts_path}

        .js_filtered_table
          = render partial: "table", locals: {bank_accounts: @bank_accounts}
      - else
        %em No Hay ninguna cuenta bancaria agregada
  .sidebar{id: "sidebar"}
    %h2 Administracion de Cuentas Bancarias
    .sidebar_section_text Listado de cuentas bancarias agregadas al banco.

  .clear
