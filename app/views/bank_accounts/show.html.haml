%h1= @bank_account.id
%p
  %strong Cliente
  = @bank_account.client.name
%p
  %strong Tipo
  = @bank_account.account_type.title
%p
  %strong Moneda
  = @bank_account.currency
%p
  %strong Saldo
  = @bank_account.balance

%table
  %tr
    %td= link_to "Lista de Transacciones", "#"
    %td= link_to "Depositar", deposit_bank_account_path(@bank_account, transaction_type: "deposit")
    %td= link_to "Retirar", retire_bank_account_path(@bank_account, transaction_type: "retire")
